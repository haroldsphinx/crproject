<%- include ../../layouts/header.ejs %>
 <!-- Content Header (Page header) -->
<style>
.form-group{ overflow: hidden;}
.connection_close{ display:none;}
</style>
    <section class="content-header">
      <h1 style="margin-bottom:10px;">
        Edit Session
        <small>session panel</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Edit Session</li>
      </ol>

    </section> 

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Edit Session</h3>
            </div>
            <div class="alert alert-danger alert-dismissible connection_close">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                Connection lost! please <a href="/match/edit-score/<%=data[0].match_id%>">click here</a> or refresh the page to reconnect! 
              </div>
            <!-- /.box-header -->
            <div class="box-body">

        <div class="page-data">
             <div class="col-md-6">
                <div class="box box-info">
					<div class="box-header with-border">
					  <h3 class="box-title">Input Addon</h3>
					</div>
					<div class="box-body">
                                            <input type="hidden" name="_id" id="match_id" value="<%= data[0]._id %>" />
					<!--	<div class="form-group">
							<div class="input-group">
									<span class="input-group-addon"><b>Market Rate</b></span>
									<input class="form-control" onfocusout="setSessionFields2(this)" id="market_rate" name="market_rate" value="<%= data[0].session_info.market_rate_1 %>-<%= data[0].session_info.market_rate_2 %>" type="text">
							</div>
						</div> 
                                        -->
                                                <div class="form-group">
							<div class="input-group ">
									<span class="input-group-addon"><b>Session</b></span>
                                                                      <div style="padding-left: 0px;" class="col-md-3">
									<input style="text-align: center;" class="form-control" onfocusout="setSessionFields2(this)" id="session_1" name="session_1" value="<%= data[0].session_info.session_1 %>" type="text">
                                                                      </div>
                                                                       <div style="padding-left: 0px;" class="col-md-3">
									<input style="text-align: center;" class="form-control" onfocusout="setSessionFields2(this)" id="session_2" name="session_2" value="<%= data[0].session_info.session_2 %>" type="text">
                                                                      </div>
                                                                      <input <%= data[0].session_info.session_cal == '1' ? "checked" : ""%> onclick="setSessionFields(this)" type="radio" name="session_cal" value="1"> Single &nbsp; <input <%= data[0].session_info.session_cal == '2' ? "checked" : ""%> onclick="setSessionFields(this)" type="radio" name="session_cal" value="2"> Double
                                                                   
							</div>
                                                        
									
                                                                      
							
						</div>
                                                <div style="display:none;" class="form-group">
							<div class="input-group">
									<span class="input-group-addon"><b>Favorite</b></span>
									<select class="form-control" id="favorite" onchange="setSessionFields2(this)" name="favorite">
                                                                            <option value="">-Select-</option>
                                                                            <option <%= data[0].session_info.favorite == data[0].team_1_info.team_name ? "selected" : ""%> value="<%= data[0].team_1_info.team_name %>"><%= data[0].team_1_info.team_name %></option>
                                                                            <option <%= data[0].session_info.favorite == data[0].team_2_info.team_name ? "selected" : ""%> value="<%= data[0].team_1_info.team_name %>"><%= data[0].team_1_info.team_name %></option>
                                                                            <option <%= data[0].session_info.favorite == 'Dono' ? "selected" : ""%> value="Dono">Dono</option>
                                                                            <option <%= data[0].session_info.favorite == 'Lagana' ? "selected" : ""%> value="Lagana">Lagana</option>
                                                                        </select>
							</div>
						</div>
                                                <div class="form-group">
							<div class="input-group">
									<span class="input-group-addon"><b>Over</b></span>
									<input class="form-control" onfocusout="setSessionFields(this)" id="over" name="over" value="<%= data[0].session_info.over%>" type="text">
							</div>
						</div>
                                       
						
									<span><b>90/110</b></span>&nbsp;&nbsp;
									<input onclick="setSessionFields2(this)" id="numbe_eleven" name="numbe_eleven" <%= data[0].session_info.numbe_eleven == '1' ? "checked" : ""%> value="1" type="checkbox" />
						
						
						
						
					</div>
					<!-- /.box-body -->
				  </div>
             </div>
			 
    </div> 
</div>
</div>
</section>
<script type="text/javascript" src="<%= (global.base_url) ? global.base_url : '' %>/js/socket.js"></script>
<%- include ../../layouts/footer.ejs %>
