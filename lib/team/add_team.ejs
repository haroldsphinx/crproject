<%- include ../../layouts/header.ejs %>
 <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1 style="margin-bottom:10px;">
        Add Team
        <small>team panel</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Add Team</li>
      </ol>

    </section> 

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Add Team</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
        <div class="page-data">
            <form enctype="multipart/form-data" role="form" id="user-form" method="post" action="/team/save-team">
              <div class="form-group">
                <label for="teamname">Team Name</label>
                <input type="hidden" name="team_id" id="team_id" value=""/>
                <input type="text" class="form-control" name="team_name" id="_" placeholder="Team name" required>
              </div>
              <div class="form-group">
                <label for="team_shortname">Team Short name</label>
                <input type="text" class="form-control" name="team_shortname" id="team_shortname" placeholder="Team short name" required>
              </div>
              <div class="form-group">
                 <label for="Image">Image</label>
                 <input type="file" name="image" />
              </div>
              <div class="form-group">
              <label class="radio-inline">
                  <input type="radio" id="status-active" name="status" value="1" checked> Active
               </label>
              <label class="radio-inline">
                  <input type="radio" id="status-inactive" name="status" value="0"> Inactive
                </label>
              </div>
              <div class="form-group">
                <a class="btn btn-default" href="/team"><i class="fa fa-times"></i>Cancle</a>
                <button type="submit" class="btn btn-primary" id="save-team"><i class="fa fa-save"></i> Save</button>
              </div>
            </form>             
        </div>
        
  </div>
         </div>
         </div>
     </div>
    </section>
<%- include ../../layouts/footer.ejs %>