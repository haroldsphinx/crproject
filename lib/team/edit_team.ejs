<%- include ../../layouts/header.ejs %>
 <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1 style="margin-bottom:10px;">
        Edit Team
        <small>team panel</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Edit Team</li>
      </ol>

    </section> 

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Edit Team</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

        <div class="page-data">
             <form enctype="multipart/form-data" role="form" id="team-form" method="post" action="/team/save-team">
              <div class="form-group">
                <label for="teamname">Team Name</label>
                <input type="hidden" name="team_id" id="team_id" value="<%=data[0]._id %>"/>
                <input type="text" class="form-control" name="team_name" id="_" placeholder="Team name" value="<%=data[0].team_name%>" required>
              </div>
              <div class="form-group">
                <label for="team_shortname">Team Short name</label>
                <input type="text" class="form-control" name="team_shortname" id="team_shortname" value="<%=data[0].team_shortname%>" placeholder="Team short name" required>
              </div>
             <div class="form-group">
                 <label for="Image">Image</label>
                 <input type="file" name="image" />
                 <% if(data[0].image) {%>
                 <img width="100" src="<%= base_url%>/uploads/<%= data[0].image %>" />
                 <% }%>
              </div>
              <div class="form-group">
              <label class="radio-inline">
                  <input type="radio" id="status-active" name="status" value="1" <%= data[0].status=='Active' ? "checked" : "" %> > Active
               </label>
              <label class="radio-inline">
                  <input type="radio" id="status-inactive" name="status" value="0" <%= data[0].status=='Inactive' ? "checked" : "" %> > Inactive
                </label>
              </div>
              <div class="form-group">
                <a class="btn btn-default" href="/team"><i class="fa fa-times"></i>Cancle</a>
                <button type="submit" class="btn btn-primary" id="save-team"><i class="fa fa-save"></i> Edit</button>
              </div>
            </form>  
            
            
        </div>
        
  </div>
         </div>
         </div>
     </div>
    </section>
<%- include ../../layouts/footer.ejs %>
